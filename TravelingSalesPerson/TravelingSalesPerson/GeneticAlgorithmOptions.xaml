        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,184,0,0" x:Name="initialPopulationTextBox" VerticalAlignment="Top" Width="72" Text="250" />
        <Label Content="Crossover Point:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,117,0,0" x:Name="mutationTextBox" VerticalAlignment="Top" Width="72" Text="5" />
