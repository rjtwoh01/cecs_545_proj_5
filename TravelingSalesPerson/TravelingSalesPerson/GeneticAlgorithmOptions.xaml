        <Label Content="Trials:" Height="28" HorizontalAlignment="Left" Margin="12,308,0,0" x:Name="label5" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,332,0,0" x:Name="trialsTextBox" VerticalAlignment="Top" Width="72" Text="100" />
        <CheckBox x:Name="wocChecked" Content="WOC" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,384,0,0" Height="23" Width="94" IsChecked="False"/>

    </Grid>
</Window>
